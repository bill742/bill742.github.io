/*Show-Hide Portfolio Blocks*/
#portfolio dl {margin-top: 20px; margin-bottom: 30px;}
#portfolio dt {clear: left; background: #fffdd8; color: #333; margin: 0px 20px; padding: 10px 20px; border-top: 1px solid #2d2a2a; display: block; font: normal normal 700 16px/30px 'Ubuntu', sans-serif;}
#portfolio dt:first-child {
  border-top: none;
}
#portfolio dt:hover {
  cursor: pointer;
}
#portfolio dd {
  font-size: 12px;
  padding: 20px;
  background: #333333;
  color: #fff;
  margin: 0px 20px;
  overflow-y: auto;
}
#portfolio dd img {
  float: left;
  border: solid 1px #000;
  margin-right: 20px;
}
#portfolio dd p {
  float: left;
  text-align: left;
  margin: 0px;
  padding: 0px;
  width: 60%;
  font-size: 16px;
  line-height: 22px;
  margin-bottom: 12px;
}
#portfolio dd a:link,
#portfolio dd a:active,
#portfolio dd a:visited {
  color: #fff;
  text-decoration: none;
}
#portfolio dd a:hover {
  color: #fff;
  text-decoration: underline;
}
.hide {
  display: none;
}